<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key %>')">
  <div class="px-3">
    <h1> <%= @list.name.capitalize %> </h1>
  </div>
</div>

<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary m-3 align-items-end"  %>
<h2 class="text-center"> <strong> My bookmarks </strong></h2>

<div class="cards text-align-center">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="container flex-center m-2 shadow-sm p-3 mb-5 bg-body-tertiary rounded">
      <div class="card-category-lg">
        <h4><strong><%= bookmark.movie.title %></strong></h4>
        <p> <%= bookmark.movie.overview %> </p>
        <p><em>*<%= bookmark.comment %></em> </p>
      </div>
      <div class="card-category-lg">
        <%= image_tag bookmark.movie.poster_url, width: 200, class: "border border-black"%>
      </div>
      <div>
        <%= link_to 'Delete',  bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-warning mt-2"%>
      </div>
    </div>
  <% end %>
</div>
<%= link_to "<< Back", lists_path, class: "btn btn-primary m-3"  %>
